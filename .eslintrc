{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended", "plugin:jest/recommended"],
  "plugins": ["jest"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-console": "off",
    "no-param-reassign": "off",
    "array-callback-return": "off",
    "no-restricted-syntax": "off",
    "no-promise-executor-return": "off",
    "no-plusplus": "off"
  }
}
